{
  // ========================================
  // Format on Save
  // ========================================
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "go",
    "dart",
    "html",
    "javascript",
    "typescript",
    "css",
    "scss",
    "json",
    "graphql",
    "markdown",
    "yaml"
  ],

  // ========================================
  // 補完設定
  // ========================================
  "suggest.enablePreselect": true,
  "suggest.noselect": false,
  "suggest.timeout": 5000,
  "suggest.maxCompleteItemCount": 20,
  "suggest.snippetIndicator": "►",
  "suggest.enablePreview": true,

  // ========================================
  // 診断（Diagnostics）設定
  // ========================================
  "diagnostic.enable": true,
  "diagnostic.level": "hint",
  "diagnostic.signOffset": 9999999,
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.refreshOnInsertMode": true,

  // ========================================
  // 言語サーバー設定
  // ========================================

  // TypeScript/JavaScript
  "typescript.format.enabled": true,
  "typescript.suggest.autoImports": true,
  "javascript.format.enabled": true,
  "javascript.suggest.autoImports": true,

  // Go
  "go.goplsOptions": {
    "completeUnimported": true,
    "usePlaceholders": true,
    "deepCompletion": true
  },

  // Python
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",

  // HTML
  "html.autoClosingTags": true,
  "html.format.enable": true,

  // CSS
  "css.validate": true,

  // YAML
  "yaml.format.enable": true,
  "yaml.validate": true,

  // ========================================
  // Prettier設定
  // ========================================
  "prettier.enable": true,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,

  // ========================================
  // ESLint設定
  // ========================================
  "eslint.enable": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],

  // ========================================
  // スニペット設定
  // ========================================
  "snippets.ultisnips.enable": true,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "~/.config/nvim/UltiSnips"
  ],

  // ========================================
  // コードアクション設定
  // ========================================
  "codeAction.disabledActions": [],
  "codeAction.showDocumentationActions": true,

  // ========================================
  // その他の設定
  // ========================================
  "semanticTokens.enable": true,
  "codeLens.enable": true,
  "signature.enable": true,
  "signature.target": "float",

  // Notification
  "notification.statusLineProgress": true,

  // Hover
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },

  // ========================================
  // 言語サーバーの追加設定
  // ========================================
  "languageserver": {
    // Bash Language Server
    "bash": {
      "command": "/Users/user/.local/share/mise/installs/node/24.9.0/bin/bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    // Docker Language Server
    "dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["dockerfile"]
    },
    // Elixir Language Server (Phoenix対応)
    "elixir": {
      "command": "/usr/local/bin/elixir-ls",
      "filetypes": ["elixir", "eelixir", "heex", "surface"],
      "rootPatterns": ["mix.exs", ".git/"]
    },
    // Go Language Server
    "golang": {
      "command": "/Users/user/.local/share/mise/installs/go/1.25.1/bin/gopls",
      "rootPatterns": ["go.mod", ".git/", ".vim/"],
      "filetypes": ["go"]
    },
    // TypeScript/JavaScript Language Server
    "tsserver": {
      "command": "/Users/user/.local/share/mise/installs/node/24.9.0/bin/typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
      "rootPatterns": ["package.json", "tsconfig.json", "jsconfig.json", ".git"]
    },
    // Rust Language Server
    "rust": {
      "command": "/Users/user/.cargo/bin/rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    }
  },
  "snippets.ultisnips.pythonPrompt": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
